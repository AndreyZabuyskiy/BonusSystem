@model BonusSystem.Models.ViewModels.ViewCreateClient_BonusCard
@{
    ViewBag.Title = "Добавление клиента";
}

<form asp-action="create" asp-controller="home">
    <div class="form-group">
        <label asp-for="FirstName" class="control-label">Firstname</label>
        <input type="text" asp-for="FirstName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="LastName" class="control-label">Lastname</label>
        <input type="text" asp-for="LastName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="MiddleName" class="control-label">Middlename</label>
        <input type="text" asp-for="MiddleName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="PhoneNumber" class="control-label">PhoneNumber</label>
        <input type="text" asp-for="PhoneNumber" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Balance" class="control-label">Balance</label>
        <input type="number" asp-for="Balance" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Submit" class="btn btn-default" />
    </div>
</form>
