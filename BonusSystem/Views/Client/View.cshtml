@model Client


<p>ClientId: @Model.Id</p>
<p>@Model.FirstName @Model.MiddleName @Model.LastName</p>
<p>Phone number: @Model.PhoneNumber</p>
<a asp-controller="client" asp-action="edit" asp-route-id=@Model.Id>Edit client</a>

<hr />

<p>CardId: @Model.BonusCard.Id</p>
<p>Number card: @Model.BonusCard.Number</p>
<p>Balance: @Model.BonusCard.Balance</p>
<p>
    <div>Create data: @Model.BonusCard.CreateDate</div>
    <div>Expiration data: @Model.BonusCard.ExpirationDate</div>
</p>
<a asp-controller="client" asp-action="creditfundstocard" asp-route-id=@Model.BonusCard.Id>Credit funds</a>
<a asp-controller="client" asp-action="WritingOffFundsFromBonusCard" asp-route-id="@Model.BonusCard.Id">Writing off funds</a>
